<Window x:Class="zadanie1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zadanie1"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="200" Background="Aqua">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите трехзначное число:"/>
            <TextBox x:Name="Text" Width="120" Margin="0 10"/>
            <Button x:Name="Ok" Content="Вычислить" Width="80" Click="Ok_Click"/>
            <TextBlock x:Name="TextBlock" Text="" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Window>
